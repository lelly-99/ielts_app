<div class="d-flex">
    {{> sidebar}}
    
    <div class="dashboard-container">
        <div class="container-fluid py-4">
            <div class="card mt-4 bg-dark">
                <div class="card-header bg-dark">
                    Previous Sessions
                </div>
                <div class="table-responsive"> 
                    <table class="table table-dark table-larger"> 
                        <thead>
                            <tr>
                                <th class="px-4 py-3">Date</th> 
                                <th class="px-4 py-3">Mode</th>
                                <th class="px-4 py-3">Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if previousSessions.length}}
                                {{#each previousSessions}}
                                    <tr>
                                        <td class="px-4 py-3">{{formatDate date}}</td>
                                        <td class="px-4 py-3">{{type}}</td>
                                        <td class="px-4 py-3">{{score}}</td>
                                    </tr>
                                {{/each}}
                            {{else}}
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-4">No previous sessions</td>
                                </tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'extraStyles'}}
<style>
    .dashboard-container {
        margin-left: 280px;
        flex: 1;
        min-height: 100vh;
        background-color: #1a1a1a;
        padding: 20px; 
    }

    .card {
        width: 95%; 
        margin: 0 auto; 
    }

    .table-larger {
        font-size: 1.1rem; 
    }

    .table-larger td, 
    .table-larger th {
        vertical-align: middle;
        min-height: 60px; 
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table-larger tbody tr:hover {
        background-color: #2c2c2c;
        transition: background-color 0.2s ease;
    }

    .card-header {
        font-size: 1.3rem;
        padding: 1rem 1.5rem;
    }
</style>
{{/section}}